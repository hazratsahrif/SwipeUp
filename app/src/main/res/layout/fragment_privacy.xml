<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.settings.PrivacyFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:paddingVertical="18dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter_semibold"
                android:text="Privacy"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>




    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:thumbTextPadding="5dp"
        app:switchMinWidth="44dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:checked="true"
        android:fontFamily="@font/inter_medium"
        android:text="Allow others to find me"
        android:textSize="15sp"
        android:background="@null"
        android:thumb="@null"
        app:thumbTint="#00FFFFFF"
        app:track="@drawable/toggle"

        />

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_marginTop="17dp"
        android:layout_height="wrap_content"
        app:switchMinWidth="44dp"

        android:layout_marginHorizontal="24dp"
        android:checked="false"
        android:fontFamily="@font/inter_medium"
        android:text="Private account"

        android:paddingVertical="0dp"
        android:minHeight="30dp"
        android:textSize="15sp"
        android:background="@null"
        android:thumb="@null"
        app:thumbTint="#00FFFFFF"

        app:track="@drawable/toggle"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="@color/base500"
        android:layout_marginLeft="24dp"
        android:lineHeight="16dp"
        android:layout_marginRight="90dp"
        android:fontFamily="@font/inter_regular"
        android:text="Only users you approve can follow you and view
your videos and likes. Your existing followers
wonâ€™t be affected">


    </TextView>



</LinearLayout>