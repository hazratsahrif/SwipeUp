<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/pic33"
          android:foreground="#1E0B0D10"
          android:scaleType="centerCrop"
           />
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:background="#31000000"
          android:layout_height="wrap_content">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingVertical="8dp"
             android:layout_marginTop="12dp"
             android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"

                   android:src="@drawable/follow_up"
                   android:layout_toRightOf="@id/tvFollow"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/tvFollow"
                   android:text="@string/following"
                   android:textColor="#8FFFFFFF"
                   android:textSize="15sp"

                   android:fontFamily="@font/inter_medium"
                   android:gravity="center"
                   />
            </RelativeLayout>

            <TextView
                android:layout_width="1dp"
                android:background="@drawable/divider"
                android:layout_marginHorizontal="20dp"

                android:layout_height="13dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/for_you"
                android:layout_marginRight="4dp"

                android:textColor="@color/white"
                android:fontFamily="@font/inter_medium"
                android:textSize="15sp"
                android:gravity="center"
                />
         </LinearLayout>


         <View
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_weight="1"
             />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="bottom"
             android:layout_marginBottom="72dp"


             android:orientation="vertical"
             android:gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/btnProfile"
                android:paddingHorizontal="12dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

               <ViewFlipper
                   android:layout_width="wrap_content"
                   android:id="@+id/viewFlipper"
                   android:layout_gravity="center"
                   android:layout_height="wrap_content">

                  <com.google.android.material.card.MaterialCardView
                      android:layout_width="38dp"
                      app:strokeWidth="1.5dp"
                      app:strokeColor="@android:color/transparent"
                      app:cardCornerRadius="100dp"
                      android:layout_gravity="center_vertical"
                      app:cardBackgroundColor="@android:color/transparent"
                      android:layout_height="38dp">
                     <ImageView
                         android:layout_width="match_parent"
                         android:layout_gravity="center"
                         android:padding="3dp"
                         android:layout_height="match_parent"
                         android:src="@drawable/avatar_man"/>

                  </com.google.android.material.card.MaterialCardView>
                  <com.google.android.material.card.MaterialCardView
                      android:layout_width="38dp"
                      app:cardCornerRadius="100dp"
                      android:visibility="gone"
                      android:layout_gravity="center_vertical"
                      app:cardBackgroundColor="@android:color/transparent"
                      app:strokeWidth="1.5dp"
                      app:strokeColor="@color/red"
                      android:layout_height="38dp">
                     <ImageView
                         android:layout_width="match_parent"
                         android:layout_gravity="center"
                         android:padding="3dp"
                         android:layout_height="match_parent"

                         android:src="@drawable/avatar_man"/>

                  </com.google.android.material.card.MaterialCardView>
                  <com.google.android.material.card.MaterialCardView
                      android:layout_width="38dp"
                      app:cardCornerRadius="100dp"
                      android:visibility="gone"
                      app:cardBackgroundColor="@android:color/transparent"
                      app:strokeColor="@color/red"
                      app:strokeWidth="2dp"
                      android:padding="2dp"
                      android:layout_height="38dp">
                     <ImageView
                         android:layout_width="32dp"
                         android:layout_height="32dp"
                         android:layout_gravity="center"
                         android:src="@drawable/avatar_man"/>



                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center|bottom"
                         android:background="@drawable/curve">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"

                            android:layout_marginVertical="2dp"
                            android:text="Live"
                            android:textColor="@color/white"


                            android:textSize="7sp">

                        </TextView>
                     </LinearLayout>





                  </com.google.android.material.card.MaterialCardView>

               </ViewFlipper>



               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="travelguru"
                   android:textColor="@color/white"
                   android:fontFamily="@font/inter_semibold"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="12dp"
                   android:textSize="15sp"
                   />
               <androidx.cardview.widget.CardView
                   android:layout_width="18dp"
                   app:cardCornerRadius="100dp"
                   android:layout_height="18dp"
                   android:layout_marginLeft="7dp"
                   app:cardBackgroundColor="@color/blue"
                   android:layout_gravity="center_vertical"
                   >
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:src="@drawable/checkk"
                      />
               </androidx.cardview.widget.CardView>
               <com.google.android.material.button.MaterialButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Follow"
                   android:id="@+id/btnFollow"
                   android:minHeight="0dp"
                   android:paddingHorizontal="6dp"
                   android:paddingVertical="2dp"
                   app:elevation="0dp"
                   android:elevation="0dp"
                   android:fontFamily="@font/inter_medium"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="12dp"
                   android:textAllCaps="false"
                   android:minWidth="0dp"
                   app:cornerRadius="100dp"
                   android:textSize="10sp"
                   android:backgroundTint="#FF5B71"
                   android:textColor="@color/white"

                   />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:text="@string/another_day_another_beach_i_want_to_leave_like_nthis_forever_travel_nature_ocean"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_regular"
                android:letterSpacing="0"
                android:lineHeight="20dp"

                android:layout_marginVertical="8dp"
                android:textSize="12sp"
                />




             <androidx.constraintlayout.widget.ConstraintLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <View
                     android:layout_width="0dp"
                     android:id="@+id/paddingStart"
                     android:layout_height="2dp"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintBaseline_toBottomOf="parent"
                     app:layout_constraintWidth_percent="0.02919708029" />

                 <com.google.android.material.card.MaterialCardView

                     android:layout_width="0dp"
                     android:id="@+id/card1"
                     android:layout_height="32dp"
                     android:layout_gravity="center"
                     app:layout_constraintWidth_percent="0.43795620438"
                     android:backgroundTint="#4A7E7D7D"
                     android:elevation="0dp"
                     app:layout_constraintLeft_toRightOf="@id/paddingStart"
                     app:cardCornerRadius="6dp"
                     app:cardElevation="0dp"
                     app:layout_constraintBottom_toBottomOf="parent"
                     >

                     <com.google.android.material.card.MaterialCardView
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_gravity="center"
                         android:backgroundTint="#29FFFFFF"
                         android:elevation="0dp"
                         app:cardCornerRadius="6dp"
                         app:cardElevation="0dp">

                         <TextView

                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_gravity="center_vertical"
                             android:backgroundTint="@android:color/transparent"
                             android:drawableLeft="@drawable/cd___small"
                             android:drawablePadding="8dp"
                             android:ellipsize="marquee"
                             android:id="@+id/scrollingtext"
                             android:focusable="true"
                             android:focusableInTouchMode="true"
                             android:gravity="center_vertical"
                             android:marqueeRepeatLimit="marquee_forever"
                             android:padding="6dp"
                             android:paddingVertical="14dp"

                             android:scrollHorizontally="true"
                             android:singleLine="true"
                             android:text="Kinabeats – Can We Kiss Forever"
                             android:textColor="@color/white"
                             android:textSize="12sp" />

                     </com.google.android.material.card.MaterialCardView>

                 </com.google.android.material.card.MaterialCardView>
                 <View
                     android:layout_width="0dp"
                     android:id="@+id/padding1"
                     app:layout_constraintLeft_toRightOf="@id/card1"
                     android:layout_height="2dp"
                     app:layout_constraintBaseline_toBottomOf="parent"

                     app:layout_constraintWidth_percent="0.02919708029" />


                 <com.google.android.material.card.MaterialCardView
                     android:layout_width="wrap_content"
                     app:cardCornerRadius="6dp"
                     android:id="@+id/cv11"
                     android:layout_height="32dp"
                     app:layout_constraintWidth_percent="0.17518248175"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintLeft_toRightOf="@id/padding1"
                     app:layout_constraintTop_toTopOf="parent"
                     app:cardBackgroundColor="@color/red"
                     app:layout_constraintWidth_max="70dp"

                     >
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="999k"
                         android:layout_gravity="center_vertical"
                         android:drawableLeft="@drawable/heart___small"
                         android:drawablePadding="6dp"
                         android:padding="6dp"
                         android:textColor="@color/white"
                         android:textSize="12sp"
                         android:maxLines="1"
                         />
                 </com.google.android.material.card.MaterialCardView>
                 <View
                     android:layout_width="0dp"
                     android:id="@+id/padding2"
                     app:layout_constraintLeft_toRightOf="@id/cv11"
                     android:layout_height="2dp"
                     app:layout_constraintBaseline_toBottomOf="parent"
                     app:layout_constraintWidth_percent="0.02919708029" />
                 <com.google.android.material.card.MaterialCardView
                     android:layout_width="wrap_content"
                     android:backgroundTint="#4A7E7D7D"
                     android:layout_height="32dp"
                     android:id="@+id/cv2"
                     app:cardElevation="0dp"
                     app:cardCornerRadius="@dimen/_6sdp"
                     app:layout_constraintLeft_toRightOf="@id/padding2"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintTop_toTopOf="parent"
                     app:cardBackgroundColor="@color/red"
                     app:layout_constraintWidth_percent="0.17518248175"
                     app:layout_constraintWidth_max="70dp">
                     <com.google.android.material.card.MaterialCardView
                         android:id="@+id/btnComment"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:backgroundTint="#29FFFFFF"
                         android:elevation="0dp"
                         app:cardCornerRadius="6dp"
                         app:cardElevation="0dp">

                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_gravity="center_vertical"
                             android:backgroundTint="@android:color/transparent"
                             android:drawableLeft="@drawable/comments___small"
                             android:drawablePadding="6dp"
                             android:gravity="center_vertical"
                             android:maxLines="1"
                             android:padding="6dp"
                             android:text="999k"
                             android:textColor="@color/white"
                             android:textSize="12sp" />

                     </com.google.android.material.card.MaterialCardView>



                 </com.google.android.material.card.MaterialCardView>
                 <View
                     android:layout_width="0dp"
                     app:layout_constraintBottom_toBottomOf="parent"
                     android:id="@+id/padding3"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintLeft_toRightOf="@id/cv2"
                     android:layout_height="2dp"
                     app:layout_constraintWidth_percent="0.02919708029"

                     />
                 <com.google.android.material.card.MaterialCardView
                     android:id="@+id/materialCardVie"
                     android:layout_width="0dp"
                     app:layout_constraintLeft_toRightOf="@id/padding3"
                     android:layout_height="wrap_content"
                     android:backgroundTint="#4A7E7D7D"
                     android:elevation="0dp"
                     app:layout_constraintWidth_percent="0.07785888077"
                     android:minWidth="26dp"
                     app:layout_constraintTop_toTopOf="parent"
                     app:cardBackgroundColor="@color/red"
                     app:cardCornerRadius="6dp"
                     app:cardElevation="0dp">

                     <com.google.android.material.card.MaterialCardView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerHorizontal="true"
                         android:backgroundTint="#29FFFFFF"
                         android:elevation="0dp"
                         app:cardCornerRadius="6dp"
                         app:cardElevation="0dp">

                         <ImageView
                             android:id="@+id/btnShare"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_gravity="center"
                             android:layout_margin="8dp"
                             android:src="@drawable/share___small" />
                     </com.google.android.material.card.MaterialCardView>
                 </com.google.android.material.card.MaterialCardView>
                 <View
                     android:layout_width="0dp"
                     android:id="@+id/paddingEnd"
                     android:layout_height="0dp"
                     app:layout_constraintWidth_percent="0.02919708029"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintLeft_toRightOf="@id/materialCardVie"
                     app:layout_constraintRight_toRightOf="parent"
                     />


             </androidx.constraintlayout.widget.ConstraintLayout>

         </LinearLayout>

      </LinearLayout>


   </RelativeLayout>




</LinearLayout>