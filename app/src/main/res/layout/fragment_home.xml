                      app:cardCornerRadius="100dp"
                      android:layout_gravity="center_vertical"
                      app:cardBackgroundColor="@android:color/transparent"
                      app:strokeWidth="1dp"
                      android:padding="2dp"
                      app:strokeColor="@color/red"
