                      app:strokeWidth="1dp"
                      android:padding="2dp"
                      android:layout_height="36dp">
                     <ImageView
                         android:layout_width="32dp"
                         android:layout_height="32dp"
                         android:layout_gravity="center"
                         android:src="@drawable/avatar_man"/>



