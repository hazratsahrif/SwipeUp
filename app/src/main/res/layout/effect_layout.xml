<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:paddingVertical="12dp"
        android:layout_height="wrap_content"

        android:gravity="center_vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:strokeWidth="1dp"
            android:id="@+id/cvSound"
            app:strokeColor="#E8EAED"
            app:cardElevation="0dp"
            android:elevation="0dp"
            app:cardCornerRadius="6dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:id="@+id/ivCard"
                    android:src="@drawable/cover_2_" />

        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green Screen"
            android:layout_toRightOf="@id/cvSound"
            android:id="@+id/tvEffect"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginStart="16dp"
            android:textSize="15sp"
            android:textColor="#2B323B"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/cvSound"
            android:id="@+id/tvSubEffect"
            android:layout_marginStart="16dp"
            android:layout_below="@id/tvEffect"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Effect Assistant"
            android:textSize="15sp"
            android:textColor="#A4ADB7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/videos_cam"
            android:drawableTint="@color/grey"
            android:textColor="@color/base300"
            android:layout_centerVertical="true"

            android:id="@+id/tvViews"
            android:paddingVertical="0dp"
            android:fontFamily="@font/inter_regular"
            android:elegantTextHeight="true"
            android:textSize="14sp"
            android:drawablePadding="12dp"
            android:text="2.4M"
            android:layout_alignParentRight="true"
            android:backgroundTint="@android:color/transparent"
            />
    </RelativeLayout>
</LinearLayout>