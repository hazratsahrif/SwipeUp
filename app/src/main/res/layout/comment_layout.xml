<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:id="@+id/cvAvatar"
                app:cardElevation="0dp"
                app:cardCornerRadius="100dp"
                android:elevation="0dp"
                android:layout_height="48dp">
                <ImageView
                    android:id="@+id/avatar1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar" />

            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@id/cvAvatar"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="mixtapenegative"
                    android:textColor="@color/light_black"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="commented on your post ・2d "
                        android:textSize="14sp" />
                </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_alignParentStart="true"
                        android:id="@+id/cvComment"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">


                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/materialCardView"
                            android:layout_weight="0.8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:elevation="0dp"
                            app:cardBackgroundColor="@color/light_white"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/tvComment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:layout_marginVertical="8dp"
                                android:fontFamily="@font/inter_regular"
                                android:maxWidth="192dp"
                                android:text="Looks like a heaven!"
                                android:textColor="@color/grey"
                                android:textSize="14sp" />


                        </com.google.android.material.card.MaterialCardView>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.05"
                            android:id="@+id/paddingStart"
                            android:layout_height="2dp"
                            app:layout_constraintLeft_toRightOf="@id/materialCardView"
                            app:layout_constraintBaseline_toBottomOf="parent"
                            />
                        <ImageButton
                            android:id="@+id/btnHeart"
                            app:layout_constraintLeft_toRightOf="@id/paddingStart"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/heart___small"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/gray_base200" />
                        <View
                            android:layout_width="0dp"
                            android:id="@+id/paddingEnd"
                            android:layout_weight="0.05"
                            android:layout_height="2dp"

                             />
                    </LinearLayout>




            </LinearLayout>




        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_marginHorizontal="8dp"
            android:layout_gravity="right"
            android:id="@+id/cv"
            app:cardCornerRadius="12dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/coverImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="centerCrop"
                android:src="@drawable/cover"
                />

        </androidx.cardview.widget.CardView>





    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"></View>

