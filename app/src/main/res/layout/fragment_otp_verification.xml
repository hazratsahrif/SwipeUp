<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.signin.OtpVerificationFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/back"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter_semibold"
                android:text="OPT Verification"
                android:textColor="@color/black"
                android:textSize="18sp"


                />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/reset"
        android:textSize="15sp"

        />
    <com.chaos.view.PinView
        android:id="@+id/firstPinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/base800"
        android:enabled="true"
        android:inputType="number"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="16dp"
        android:selectAllOnFocus="true"
        android:focusableInTouchMode="true"
        android:textColor="@color/base300"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cursorColor="@color/base800"
        app:cursorWidth="1dp"
        android:focusable="true"
        style="@style/PinWidget.PinView"
        app:itemCount="4"
        app:itemHeight="48dp"
        app:itemRadius="12dp"
        app:itemSpacing="16dp"
        app:itemWidth="70dp"
        app:lineColor="@drawable/linecolor"
        app:lineWidth="1.4dp"
        app:viewType="rectangle" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"

        android:progressTint="@color/red"


        />


</LinearLayout>