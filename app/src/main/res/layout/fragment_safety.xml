<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.settings.SafetyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">




    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:paddingVertical="18dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter_semibold"
                android:text="Safety"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>




    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:thumbTextPadding="5dp"
        app:switchMinWidth="44dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:checked="true"
        android:paddingVertical="0dp"
        android:fontFamily="@font/inter_medium"
        android:text="Allow comments"
        android:textSize="15sp"
        android:background="@null"
        android:thumb="@null"
        app:thumbTint="#00FFFFFF"
        app:track="@drawable/toggle"

        />

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:switchMinWidth="44dp"
        android:layout_marginHorizontal="24dp"
        android:checked="true"
        android:fontFamily="@font/inter_medium"
        android:text="Allow duets"
        android:textSize="15sp"
        android:background="@null"
        android:thumb="@null"
        app:thumbTint="#00FFFFFF"

        app:track="@drawable/toggle"


        />
    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:switchMinWidth="44dp"
        android:layout_marginHorizontal="24dp"

        android:checked="true"
        android:fontFamily="@font/inter_medium"
        android:text="Allow messages"
        android:textSize="15sp"
        android:background="@null"
        android:thumb="@null"
        app:thumbTint="#00FFFFFF"

        app:track="@drawable/toggle"


        />
    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:switchMinWidth="44dp"
        android:layout_marginHorizontal="24dp"

        android:checked="true"
        android:fontFamily="@font/inter_medium"
        android:text="Allow downloads"
        android:textSize="15sp"
        android:background="@null"
        android:thumb="@null"
        app:thumbTint="#00FFFFFF"

        app:track="@drawable/toggle"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block List"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/inter_medium"
        android:layout_marginHorizontal="24dp"
        />
    </LinearLayout>

</ScrollView>