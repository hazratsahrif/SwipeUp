<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="106dp"
        android:layout_gravity="start"
        android:background="@drawable/message_friend"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:id="@+id/tvMessagef"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lineHeight="24dp"
                android:fontFamily="@font/inter_regular"

                android:text="Morbi vulputate faucibus risus, iaculis gravida a sit velit ipsu"
                android:layout_height="wrap_content"

                />
            <TextView
                android:layout_width="wrap_content"
                 android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/base300"
                android:text="5:30"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:layout_below="@id/tvMessagef"
                android:layout_height="wrap_content"

                />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>