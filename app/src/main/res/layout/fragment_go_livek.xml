<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/videoback"
    tools:context=".ui.live.GoLiveFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingVertical="12dp"
        android:layout_marginHorizontal="12dp"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="32dp"
            app:cardCornerRadius="100dp"
            android:layout_height="32dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:id="@+id/ivImage"
                android:layout_gravity="center"
                android:src="@drawable/regular1"
                />

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="petlover"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="18dp"
            app:cardCornerRadius="100dp"
            android:layout_height="18dp"
            android:layout_marginLeft="7dp"
            app:cardBackgroundColor="@color/blue"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/checkk"
                />
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            app:cardBackgroundColor="#29FFFFFF"
            android:layout_gravity="center_vertical"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="512"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:padding="6dp"
                android:paddingVertical="8dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/eye"
                />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:backgroundTint="#FF5B71"
            android:layout_gravity="center_vertical"
            android:elevation="0dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            android:padding="9dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:text="Live"
                android:paddingHorizontal="11dp"
                android:paddingVertical="6dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="6dp"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
              />

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/overay"
        android:orientation="vertical">
<utils.TopFadingEdge
    android:layout_marginBottom="16dp"
    android:layout_above="@id/sexyLayout"
    android:clipToPadding="false"
    android:id="@+id/recyclerView"
    android:fadingEdgeLength="60dp"
    android:fadeScrollbars="true"
    tools:listitem="@layout/live_message_layout"
    android:requiresFadingEdge="vertical|horizontal"
    android:fadingEdge="horizontal|vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</utils.TopFadingEdge>


        <LinearLayout
            android:id="@+id/sexyLayout"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginHorizontal="17dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#29FFFFFF"
                android:elevation="0dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="#4D4B4C"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="1dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/flip" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#29FFFFFF"
                android:layout_marginLeft="16dp"
                android:elevation="0dp"
                app:cardBackgroundColor="#4D4B4C"
                app:cardCornerRadius="100dp"
                android:layout_gravity="center_vertical"
                app:cardElevation="0dp"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="1dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/btnFilter"

                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/color_filter" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="#29FFFFFF"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="100dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnStoplive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="100dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="13dp"
                        android:text="Stop Live"
                        android:textColor="#0E141B"
                        android:textSize="13sp" />
                </com.google.android.material.card.MaterialCardView>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="#29FFFFFF"
                android:elevation="0dp"
                app:cardBackgroundColor="#4D4B4C"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="1dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/btnShare"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/share" />

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>