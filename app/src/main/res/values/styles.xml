<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="tabTextColor">@color/light_black</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Theme.Feardog.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="MyTabLayoutTextAppearance" parent="Widget.Design.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabSelectedTextColor">@color/red</item>
        <item name="fontFamily">@font/inter_medium</item>

        <item name="selectableItemBackground">@color/red</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/hint_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="colorAccent">#D8CACA</item>

    </style>
    <style name="DialogTheme" parent="android:Theme.Material.Light.Dialog">
        <!-- Put the two options, colorAccent and android:colorAccent. -->
        <item name="colorAccent">@color/red</item>
        <item name="android:colorPrimary">@color/red</item>
        <item name="android:colorAccent">@color/red</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyled</item>
    </style>
    <style name="DialogButtonStyled" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/red</item> <!-- button text color -->
        <item name="android:textAllCaps">false</item> <!-- button text color -->
    </style>


</resources>